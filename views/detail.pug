extends layout

block content
    .container
        .row
            
            .col-md-6
                .title #{posts[0].title}

            .col-md-6
                img(src=`../../images/${posts[0].image}`,height='400px',width='100%')
            .detail #{posts[0].description}
            .container 
                .row 
                    .col-md-12
                        form(action="/comments", method="post")
                            .form-group
                                label(for='description') Comments
                                textarea#description.form-control(name='comment',rows='3')
                            .form-group
                                input.form-control(name='postId',type='hidden',value=posts[0].post_id)
                            .form-group
                                button.btn.btn-success(type="submit") Comment
        .row
            each post in posts
                .col-md-8
                    .d-flex.flex-column.comment-section
                        .bg-white.p-2
                            .d-flex.flex-row.user-info            
                                //- img.rounded-circle(src='https://i.imgur.com/RpzrMR2.jpg' width='40')
                                .d-flex.flex-column.justify-content-start.ml-2
                                    span.d-block.font-weight-bold.name #{post.username}
                            .mt-2
                                p.comment-text #{post.name}
                                    
        


    


